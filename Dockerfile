FROM python:3.10

# set timezone
ENV TZ=Asia/Kolkata
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

COPY requirements.txt /app/

RUN pip3 install -r requirements.txt

# changing workdir
WORKDIR /app

COPY . /app

# start the bot.
CMD python3 main.py
